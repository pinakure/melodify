server {
    listen 80;
    server_name melodify.com melodify.com.82.223.13.41.nip.io;

    # Archivos estáticos (muy importante en producción)
    location /static/ {
        alias /static/melodify/;
        expires 30d;
        add_header Cache-Control "public";
    }
    # Pasar todo lo demás a Gunicorn
    location / {
        include proxy_params;
        proxy_pass http://unix:/src/melodify/melodify.sock;

        # Elimina cualquier otra línea de "proxy_set_header Host" que hayas puesto antes
    }

    location /media/ {
        alias /src/melodify/media/; # Debe coincidir con MEDIA_ROOT
    }
    
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/m4gtracker.com.82.223.13.41.nip.io/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/m4gtracker.com.82.223.13.41.nip.io/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
server {
    if ($host = melodify.com.82.223.13.41.nip.io){
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name melodify.com melodify.com.82.223.13.41.nip.io;
    return 404;
}
