server {
    listen 80;
    server_name melodify.com melodify.com.82.223.13.41.nip.io;

    # Archivos estáticos (muy importante en producción)
    location /static/ {
        alias /static/melodify/;
        expires 30d;
        add_header Cache-Control "public";
    }
    # Pasar todo lo demás a Gunicorn
    location / {
        include proxy_params;
        proxy_pass http://unix:/src/melodify/melodify.sock;

        # Elimina cualquier otra línea de "proxy_set_header Host" que hayas puesto antes
    }
}
